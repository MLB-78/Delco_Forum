{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <h1 id="mids">Connecter vous à votre compte</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <label for="inputEmail">Email</label>
        <input type="email" id="inputEmail" name="email" value="{{ last_username }}" required autofocus>

        <label for="inputPassword">Password</label>
        <input type="password" id="inputPassword" name="password" required autocomplete="current-password">

        <div class="button-group">
            <button type="submit">Se connecter</button>
            <button type="button" id="rs" onclick="history.back()">Revenir en arrière</button>
        </div>
    </form>

{% endblock %}
