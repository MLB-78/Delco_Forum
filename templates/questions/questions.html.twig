{% extends 'base.html.twig' %}

{% block title %}Forum des questions {% endblock %}

{% block body %}
  {% if app.user %}
    <h1>Bienvenue {{ app.user.prenom }} sur le Forum des questions</h1>
    <a href="{{ path('app_home') }}" class="btn btn-danger">Déconnexion</a>
  {% endif %}
    <div class="card-container">
        
        {# formulaire #}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}

        <br>
        {# questions #}
        {% for question in questions %}
        <div class="card">
            <div class="card-header">
                {% if question.user %} 
                    Question posée par {{ question.user.prenom }} le {{ question.dateN|date('d/m/Y H:i') }}
                {% else %}
                    Question posée par un utilisateur inconnu le {{ question.dateN|date('d/m/Y H:i') }}
                {% endif %}
            </div>
            <div class="card-body">
                <a href="{{ path('repondre_question', {'id': question.id}) }}">{{ question.message }}</a>
            </div>
        </div>
        {% endfor %}

    </div>
{% endblock %}
