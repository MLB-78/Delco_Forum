<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Test - G1Besoin{% endblock %}</title>
    <link rel="icon" href="">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    {% block body %}
    
    <h1 style="text-align:center">TEST - G1Besoin</h1>

        <ul>
            <li><a href="{{ path('inscription') }}">Inscription</a></li>
            <li><a href="{{ path('connexion') }}">Connexion</a></li>
        </ul>

        {# Affichage des questions #}
        <h2>Questions :</h2>
        <ul>
            {% for question in questions %}
                {{ question.message }}
                <p>
                    {% if question.user is not null %}
                        Ajout√©e par {{ question.user.prenom }} le {{ question.dateN|date('d/m/Y H:i') }}
                    {% endif %}
                </p>
            {% endfor %}
        </ul>
    
    {% endblock %}
</body>
</html>
